{% macro nav(activePage='') %}
<nav>
    <button type="button" class="hamburger" title="Menu principal">
        <span></span>
        <span></span>
        <span></span>
    </button>

    <a href="/" class="home" title="Menu principal">
        {% include 'svg/logos/carmidor.svg' %}
    </a>

    <div class="overlay"></div>

    {%
        set links = {
            home: {
                name: 'Accueil',
                url: '/'
            },
            map: {
                name: 'Carte',
                url: '/carte'
            },
            characters: {
                name: 'Familles',
                url: '/familles'
            },
            bonus: {
                name: 'Bonus',
                url: '/bonus'
            },
            comments: {
                name: 'Avis',
                url: '/avis'
            },
            author: {
                name: 'Autrice',
                url: 'https://oliviagometz.fr/',
                external: true
            },
            buy: {
                name: 'Acheter',
                url: '/acheter',
                button: true
            }
        }
    %}

    <ul>
        {% for id, link in links %}
            <li>
                <a
                    href="{{ link.url }}"
                    class="{% if link.button %}button--active-primary button button{% else %}link link{% endif %}--white{%if activePage == id %} active{% endif %}"
                    {% if link.external %}rel="external" target="_blank"{% endif %}
                >
                    {{ link.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>
{% endmacro %}